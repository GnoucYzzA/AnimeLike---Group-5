
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AnimeLike.Areas.Admin.Models.LoginModel
<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/Content/images/Signin.png" alt="Sign in image"></figure>

                    @Html.ActionLink("Create an account", "Register", "Home", new { @class = "signup-image-link" })
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Sign in</h2>
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "register-form", id = "login-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <div class="form-group">
                            <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            @Html.TextBoxFor(model => model.UserName, new { id = "your_name", @placeholder = "Your Name", @autofocus = "autofocus" })
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.TextBoxFor(model => model.Password, new { id = "your_pass", @placeholder = "Password", @type = "password" })
                        </div>
                        <div class="form-group">
                            <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                            @Html.CheckBoxFor(model => model.RememberMe, new { id = "remember-me", @class = "agree-term" })

                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                        </div>
                    }
                    <!--<form method="POST" class="register-form" id="login-form">-->


                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
