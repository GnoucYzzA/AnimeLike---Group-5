<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- For IE 8 and older>
    <!--[if lt IE 9]>
        <script src="http://github.com/aFarkas/html5shiv/blob/master/dist/html5shiv.js"></script>
    <![endif]-->

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/vendor/jquery/jquery.min.js")"></script>
</head>
<body>
    <div>
        <!--Header-->

        <header class="container">

            <a href="#" class="header-logo"><img src="~/Content/images/AnimeLike.png" alt="logo head" /></a>

        </header>
        <nav class="navbar navbar-expand-lg navbar-static-top">
            @Html.ActionLink("Home", "Index", "Home", new{ @class="navbar-brand"})
            <a class="navbar-brand" href="#">Wallpapers</a>
            <a class="navbar-brand" href="#">Fan Arts</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                    aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search">
                    <button class="btn btn-default my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                <li class="nav-item order-2 order-md-1"><a href="#" class="nav-link" title="settings"><i class="fa fa-cog fa-fw fa-lg"></i></a></li>
                <li class="dropdown order-1">
                    <button type="button" id="dropdownMenu1" data-toggle="dropdown" class="btn btn-outline-secondary dropdown-toggle">Login <span class="caret"></span></button>
                    <ul class="dropdown-menu dropdown-menu-right mt-2">
                        <li class="px-3 py-2">
                            <form class="form" role="form">
                                <div class="form-group">
                                    <input id="emailInput" placeholder="Email" class="form-control form-control-sm" type="text" required="">
                                </div>
                                <div class="form-group">
                                    <input id="passwordInput" placeholder="Password" class="form-control form-control-sm" type="text" required="">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                                </div>
                                <div class="form-group text-center">
                                    <small>@Html.ActionLink("Forgot password?", "ResetPassword", "Home", null)</small>
                                </div>
                                <div class="form-group text-center">
                                    <small>@Html.ActionLink("Register", "Register", "Home", null)</small>
                                </div>
                            </form>
                        </li>

                    </ul>
                </li>
            </ul>
        </nav>

        <div id="product-featured">
            <div class="wrapper">
                <div class="section-header">
                    <div id="header-right">
                        <select id="all-type" class="custom-select">
                            <option value="1">All Type</option>
                            <option value="2">Loli</option>
                            <option value="3">Shota</option>
                            <option value="4">Flat</option>
                        </select>
                        <select id="all-content" class="custom-select">
                            <option value="all-content">All Content</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                        </select>
                        <select id="all-Categories" class="custom-select">
                            <option value="all-categories">All Categories</option>
                            <option value="Hiten">Hiten</option>
                            <option value="Kantoku">Kantoku</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
